<div class="text-center">
  <h2>{{blog.blog_name}}</h2>
  <p>{{blog.blog_content}}</p>
  <p>Published by {{blog.user.username}} on {{blog.date_created}}</p>
  <p>
    <button class="btn btn-primary">Write a Comment</button>
  </p>
  {{#each comments as |comment| }}
  <div>
    <p>Comment: {{blog.comment.comment_content}}</p>
    <p>{{blog.comment.user.username}}</p>
  </div>
  {{/each}}
</div>
